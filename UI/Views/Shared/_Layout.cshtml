<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>איפה אתה גר?</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="jquery-3.7.1.min.js"></script>
    <script src="~/Content/Search.js"></script>


</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary" dir="rtl">
        <div class="container-fluid" dir="rtl">
            <a class="navbar-brand" href="/City/Index">רשימת היישובים</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/City/AddCity">הוספת יישוב</a>
                    </li>
                </ul>
                <form class="d-flex" role="search" id="search-form" action="@Url.Action("SearchCity", "City")">
                    <input class="form-control me-2" type="search" placeholder="חיפוש" aria-label="Search" id="text" name="text" onkeyup="Search()" value="@DTO.General.searchText">
                </form>
            </div>
        </div>
    </nav>

    @RenderBody()


    <script src="~/Content/jquery.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>